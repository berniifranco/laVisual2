<!DOCTYPE html>
<html>
<%- include('partials/head', {title: 'Listado de Usuarios'}) %>
<body>
  <%- include('partials/header')  %> 
  <h1><%= title %></h1>
  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Nombre</th>
        <th scope="col">Rol</th>
        <th scope="col">E-Mail</th>
        <th scope="col">Nacionalidad</th>
        <th scope="col">Im√°gen</th>
      </tr>
    </thead>
    <tbody>
      <% for( let o of users ) { %>
        <tr>
          <th scope="row"><%= o.id %></th>
          <td><%= o.nombre %></td>
          <td><%= o.rol.nombre %></td>
          <td><%= o.email %></td>
          <td><%= o.pais %></td>
          <td><img src="/images/users/<%= o.image %>" alt="imagen-usuario"></td>
          <% if (locals.admin) { %>
            <td>
              <form action="/users/<%= o.id %>?_method=DELETE" method="POST">
                <button class="btn btn-sm btn-dark">Borrar</button>
              </form>
            </td>
          <% } %>
        </tr>
      <% } %>
    </tbody>
  </table>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
</body>
</html>