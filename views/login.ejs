<!DOCTYPE html>
<html lang="en">
    <%- include('partials/head', {title: 'Login'}) %>
<body>
    <%- include('partials/header')  %>
    <div class="margen-navbar">
      <form action="/users/login" method="POST">
        <% if (locals.error && error.credencial) { %>
          <h5 style="color: red ;">
            <%= error.credencial.msg %> 
          </h5>
        <% } %>
        <div class="mb-3">
          <label for="email" class="form-label">E-Mail</label>
          <input type="email" class="form-control <%= locals.errors && errors.email ? 'is-invalid' : null %>" name="email" id="email" value="<%= locals.oldData && oldData.email ? oldData.email : null %>" aria-describedby="emailHelp">
          <% if (locals.errors && errors.email) { %>
            <h5 style="color: red ;">
              <%= errors.email.msg %> 
            </h5>
          <% } %>
          <div id="emailHelp" class="form-text">Nunca enviaremos tu E-Mail a nadie.</div>
        </div>
        <div class="mb-3">
          <label for="pass" class="form-label">Contraseña</label>
          <input type="password" class="form-control <%= locals.errors && errors.pass ? 'is-invalid' : null %>" name="pass" id="pass">
          <% if (locals.errors && errors.pass) { %>
            <h5 style="color: red ;">
              <%= errors.pass.msg %> 
            </h5>
          <% } %>
        </div>
        <div class="mb-3 form-check">
          <input type="checkbox" class="form-check-input" name="recordame" id="recordame">
          <label class="form-check-label" for="recordame">Mantener sesión</label>
        </div>
        <button type="submit" class="btn btn-primary">Iniciar Sesión</button>
      </form>
    </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
</body>
</html>