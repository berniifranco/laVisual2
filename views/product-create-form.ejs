<!DOCTYPE html>
<html lang="en">
    <%- include('partials/head', {title: 'Crear producto'}) %>
<body>
    <%- include('partials/header')  %>
    <div class="margen-navbar">
      <form action="/products/create" method="POST" class="row g-3" enctype="multipart/form-data">
        <div class="col-md-6">
          <label for="nombre" class="form-label">Nombre</label>
          <input type="nombre" class="form-control <%= locals.errors && errors.nombre ? 'is-invalid' : null %>" name="nombre" id="nombre" value="<%= locals.oldData && oldData.name ? oldData.name : null %>">
          <% if (locals.errors && errors.nombre) { %>
            <h5 class="text-danger">
              <%= errors.nombre.msg %> 
            </h5>
          <% } %>
        </div>
        <div class="col-6">
          <label for="precio" class="form-label">Precio</label>
          <input type="number" class="form-control <%= locals.errors && errors.price ? 'is-invalid' : null %>" name="precio" id="precio" value="<%= locals.oldData && oldData.price ? oldData.price : null %>">
          <% if (locals.errors && errors.precio) { %>
            <h5 class="text-danger">
              <%= errors.precio.msg %> 
            </h5>
          <% } %>
        </div>
        <div class="col-6">
          <label for="cantidad" class="form-label">Cantidad</label>
          <input type="number" class="form-control <%= locals.errors && errors.cantidad ? 'is-invalid' : null %>" name="cantidad" id="cantidad" value="<%= locals.oldData && oldData.stock ? oldData.stock : null %>">
          <% if (locals.errors && errors.cantidad) { %>
            <h5 class="text-danger">
              <%= errors.cantidad.msg %> 
            </h5>
          <% } %>
        </div>
        <div class="col-6">
          <label for="id_categoria" class="form-label">Tipo</label>
          <select name="id_categoria" id="id_categoria" class="form-select">
            <option value="" disabled selected>Elije categor√≠a</option>
            <% categorias.forEach(categoria => { %>
              <option value="<%= categoria.id %>"><%= categoria.nombre %></option>
            <% }) %> 
          </select>
        </div>
        <div class="col-12">
          <button type="submit" class="btn btn-primary">Crear</button>
        </div>
      </form>
    </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
</body>
</html>