<!DOCTYPE html>
<html>
<%- include('partials/head', {title: 'Carrito de Compras'}) %>
<body>
  <%- include('partials/header')  %> 
  <h1><%= title %></h1>
  <p>Bienvenido a <%= title %></p>
  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">Nombre</th>
        <th scope="col">Precio</th>
        <th scope="col">Cantidad</th>
        <th scope="col">Im√°gen</th>
        <th scope="col">Precio total</th>
      </tr>
    </thead>
    <tbody>
      <% for( let o of productos ) { %>
        <tr>
          <td><%= o.producto.nombre %></td>
          <td id="precio">$ <%= o.producto.precio %></td>
          <td id="cantidad"><%= o.cantidad %> unidades</td>
          <td><img src="/images/products/<%= o.image %>" alt="imagen-producto"></td>
          <td id="precioTotal"></td>
          <form action="/products/eliminar/<%= o.id %>?_method=DELETE" method="POST">
            <td>
              <button class="btn btn-sm btn-dark" type="submit">Eliminar item</button>
            </td>
          </form>
        </tr>
      <% } %>
    </tbody>
    <tfoot>
      <tr>
        <th>Total</th>
        <th></th>
        <th></th>
        <th></th>
        <th id="precioFinal"></th>
      </tr>
    </tfoot>
  </table>
  <form action="/products/vaciar?_method=DELETE" method="POST">
    <button class="btn btn-sm btn-dark">Vaciar Carrito</button>
  </form>
  <form action="/products/comprar" method="POST">
    <button class="btn btn-sm btn-dark">Comprar</button>
  </form>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
  <script src="/javascripts/products.js"></script>
</body>
</html>