<!DOCTYPE html>
<html>
<%- include('partials/head', {title: 'Carrito de Compras'}) %>
<body>
  <%- include('partials/header')  %> 
  <h1><%= title %></h1>
  <p>Bienvenido a <%= title %></p>
  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Nombre</th>
        <th scope="col">Precio</th>
        <th scope="col">Cantidad</th>
      </tr>
    </thead>
    <tbody>
      <% for( let o of productos ) { %>
        <tr>
          <th scope="row"><%= o.id %></th>
          <td><%= o.producto.nombre %></td>
          <td>$ <%= o.producto.precio %></td>
          <td><%= o.cantidad %> unidades</td>
          <td><img src="/images/products/<%= o.image %>" alt="imagen-producto"></td>
        </tr>
      <% } %>
    </tbody>
  </table>
  <form action="/products/vaciar?_method=DELETE" method="POST">
    <button class="btn btn-sm btn-dark">Vaciar Carrito</button>
  </form>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
</body>
</html>